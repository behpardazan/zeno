@using DataLayer.Base;
@model DataLayer.Entities.AccountOrderComment
@{
    ViewBag.Title = Resource.Lang.RemoveInfo;
    Layout = "~/Views/Shared/Layout.cshtml";
}
<div class="col-sm-12">
    <div class="card-box">
        <a href="@Url.Action("index")" class="icon circle-icon glyphicon glyphicon-arrow-left" data-toggle="tooltip" data-placement="bottom" title=@Resource.Lang.Back></a>
        <div class="col-sm-12">
            @if (ViewBag.Alert != null)
            {
                <p class="alert alert-danger">@ViewBag.Alert</p>

            }
            <div class="form-horizontal">
                <h3>@Resource.Lang.SureDelete</h3>
                <dl class="dl-horizontal">

                    <dt>کاربر ثبت کننده</dt>
                    <dd>@Html.DisplayFor(model => model.SiteUser.FullName)</dd>

                    <dt>@Resource.Lang.OrderInfo</dt>
                    <dd>@Model.OrderId</dd>

                    <dt>@Resource.Lang.NoteText</dt>
                    <dd>@Html.DisplayFor(model => model.Body)</dd>

                    <dt>@Resource.Lang.DateTime</dt>
                    <dd>@Model.Datetime.GetValueOrDefault().ToPersianWithTime()</dd>

                </dl>
            </div>
            <div class="form-group">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-actions no-color">
                        <input type="submit" value=@Resource.Lang.Delete class="btn btn-danger" />
                        <span class="btn btn-inverse">@Html.ActionLink(Resource.Lang.Back, "index", new { id = Model.OrderId })</span>
                    </div>
                }
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>