@using DataLayer.ViewModels;
@model DataLayer.Entities.Account

@{
    ViewBag.Title = Resource.Lang.ChangUserPassword;
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm())
{
    <input type="hidden" value="@Model.ID" name="id" />
    <div class="col-sm-12">
        <div class="card-box">
            <div class="dropdown pull-right">
                <a href="#" class="dropdown-toggle card-drop" data-toggle="dropdown" aria-expanded="false">
                    <i class="zmdi zmdi-more-vert"></i>
                </a>
                <ul class="dropdown-menu" role="menu">
                    <li>@Html.ActionLink(Resource.Lang.Back, "Index")</li>
                </ul>
            </div>
            <div class="col-sm-6">
                <div class="form-horizontal">
                    <div class="form-group">
                        @Html.LabelFor(model => model.FullName, Resource.Lang.Name_Family, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off", @disabled = "disabled" } })
                            @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <span class="control-label col-sm-2">@Resource.Lang.NewPassword</span>
                        <div class="col-md-10">
                            <input name="newPassword" type="password" class="form-control" autocomplete="off" />
                        </div>
                    </div>
                    <div class="form-group">
                        <span class="control-label col-sm-2">@Resource.Lang.RepeatNewPassWord</span>
                        <div class="col-md-10">
                            <input name="confirmPassword" type="password" class="form-control" autocomplete="off" />
                        </div>
                    </div>
                    <div>
                        <div class="col-md-10 col-md-offset-2">
                            <div class="row">
                                @Html.Partial("~/Views/Public/Message.cshtml", (ViewMessage)ViewBag.Message)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value=@Resource.Lang.Register class="btn btn-success" />
                            <span class="btn btn-inverse">@Html.ActionLink(Resource.Lang.Back, "Index")</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
}

