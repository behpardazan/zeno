@using DataLayer.Enumarables;
@model DataLayer.Entities.TelegramKeyBoardItem
@{
    ViewBag.Title = Resource.Lang.ShowInfo;
    Layout = "~/Views/Shared/Layout.cshtml";
}
<div class="col-sm-12">
    <div class="card-box">
        <a href="@Url.Action("index", new { keyboardId = Model.KeyboardId })" class="icon circle-icon glyphicon glyphicon-arrow-left" data-toggle="tooltip" data-placement="bottom" title=@Resource.Lang.Back></a>
        <div class="col-sm-12">
            <div class="form-horizontal">
                <dl class="dl-horizontal">
                    <dt>@Resource.Lang.RobotName</dt>
                    <dd>@Model.TelegramKeyBoard.TelegramBot.Name</dd>
                    <dt>@Resource.Lang.KeyBoardName</dt>
                    <dd>@Model.TelegramKeyBoard.Name</dd>
                    <dt>@Resource.Lang.ItemTitle</dt>
                    <dd>@Html.DisplayFor(model => model.Name)</dd>
                    @if (Model.TelegramKeyBoard.Code.Label == Enum_Code.TELEGRAM_KEYBOARD_TYPE_BUTTON.ToString())
                    {
                        <dt>@Resource.Lang.InstructionName</dt>
                        <dd>@Html.DisplayFor(model => model.TelegramCommand.Command)</dd>
                    }
                    else
                    {
                        <dt>@Resource.Lang.InternetAddress</dt>
                        <dd>@Html.DisplayFor(model => model.Url)</dd>
                    }
                    <dt>@Resource.Lang.RowNumber</dt>
                    <dd>@Html.DisplayFor(model => model.Row)</dd>
                    <dt>@Resource.Lang.ColumnNumber</dt>
                    <dd>@Html.DisplayFor(model => model.ShowNumber)</dd>
                </dl>
            </div>
            <div class="form-group">
                <div>
                    <span class="btn btn-primary">@Html.ActionLink(Resource.Lang.Edit, "edit", new { id = Model.ID })</span>
                    <span class="btn btn-inverse">@Html.ActionLink(Resource.Lang.Back, "Index", new { keyboardId = Model.KeyboardId })</span>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>