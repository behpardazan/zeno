@using DataLayer.Base;
@using DataLayer.ViewModels;
@model DataLayer.Entities.CreditShoping
@{
    ViewBag.Title = "خرید اعتباری";
    Layout = "~/Views/Shared/Layout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ID)
    @Html.HiddenFor(model => model.AccountId)
    @Html.HiddenFor(model => model.CreateDate)
    @Html.HiddenFor(model => model.FullName)
    @Html.HiddenFor(model => model.Email)
    @Html.HiddenFor(model => model.Mobile)
    @Html.HiddenFor(model => model.Phone)

    @Html.HiddenFor(model => model.Post)
    @Html.HiddenFor(model => model.Tenant)
    @Html.HiddenFor(model => model.Address)
    @Html.HiddenFor(model => model.Area2)
    @Html.HiddenFor(model => model.Type)
    @Html.HiddenFor(model => model.AvregeBuy2)
    @Html.HiddenFor(model => model.CompanyId)


    <div class="col-sm-12">
        <div class="card-box">
            <a href="@Url.Action("index")" class="icon circle-icon glyphicon glyphicon-arrow-left" data-toggle="tooltip" data-placement="bottom" title=@Resource.Lang.Back></a>
            <div class="col-sm-6">
                <div class="form-horizontal">
                    <div>
                        <div class="col-md-10 col-md-offset-2">
                            <div class="row">
                                @Html.Partial("~/Views/Public/Message.cshtml", (ViewMessage)ViewBag.Message)
                            </div>
                        </div>
                    </div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.FullName, Resource.Lang.FullName, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10 control-label">
                            @Model.FullName
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Email, Resource.Lang.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10 control-label">
                            @Model.Email
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Mobile, Resource.Lang.Mobile, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10 control-label">
                            @Model.Mobile
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Phone, Resource.Lang.Phone, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10 control-label">
                            @Model.Phone
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Post, "سمت", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10 control-label">
                            @Model.Post
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Tenant, "مالک ملک", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10 control-label">
                            @Model.Tenant
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Address, "آدرس", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10 control-label">
                            @Model.Address
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Area2, "متراژ", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10 control-label">
                            @Model.Area2
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Type, "کاربری ملک", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10 control-label">
                            @Model.Type
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.AvregeBuy2, "میانگین خرید ماهیانه", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10 control-label">
                            @Model.AvregeBuy2 تومان
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.CompanyId, "شناسه شرکت", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10 control-label">
                            @Model.CompanyId
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Active, Resource.Lang.Status, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @if (Model.Active == null)
                            {
                                <label class="margin-right-10"><input id="Active" name="Active" value="null" type="radio" checked="checked" /> @Resource.Lang.NotChecked</label>
                                <label class="margin-right-10"><input id="Active" name="Active" value="True" type="radio" /> @Resource.Lang.Confirmation</label>
                                <label class="margin-right-10"><input id="Active" name="Active" value="False" type="radio" /> @Resource.Lang.Failed</label>
                            }
                            else if (Model.Active == true)
                            {
                                <label class="margin-right-10"><input id="Active" name="Active" value="null" type="radio" /> @Resource.Lang.NotChecked</label>
                                <label class="margin-right-10"><input id="Active" name="Active" value="True" type="radio" checked="checked" />@Resource.Lang.Confirmation</label>
                                <label class="margin-right-10"><input id="Active" name="Active" value="False" type="radio" /> @Resource.Lang.Failed</label>
                            }
                            else if (Model.Active == false)
                            {
                                <label class="margin-right-10"><input id="Active" name="Active" value="null" type="radio" /> @Resource.Lang.NotChecked</label>
                                <label class="margin-right-10"><input id="Active" name="Active" value="True" type="radio" /> @Resource.Lang.Confirmation</label>
                                <label class="margin-right-10"><input id="Active" name="Active" value="False" type="radio" checked="checked" /> @Resource.Lang.Failed</label>
                            }
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value=@Resource.Lang.Save class="btn btn-success" />
                            <span class="btn btn-inverse">@Html.ActionLink(Resource.Lang.Back, "Index")</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
}