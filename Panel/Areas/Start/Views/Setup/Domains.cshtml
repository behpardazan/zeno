@using DataLayer.ViewModels;
@model IEnumerable<DataLayer.Entities.WebsiteDomain>

@{
    ViewBag.Title = "نصب تنظیمات و اطلاعات وبسایت";
    Layout = "~/Areas/Start/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm())
{
    <div class="col-sm-6 no-padding">
        @foreach (var item in Model)
        {
            @Html.HiddenFor(model => item.ID)
            <div class="form-group">
                <label class="control-label col-md-3">
                    @Html.DisplayFor(model => item.Name)
                </label>
                <div class="col-md-9">
                    <input name="SelectedDomains" autocomplete="off" class="form-control ltr" value="@item.Domain" placeholder="http://yourdomain.com" />
                </div>
            </div>
        }
        <div>
            <div class="col-md-9 col-md-offset-3">
                <div class="row">
                    @Html.Partial("~/Views/Public/Message.cshtml", (ViewMessage)ViewBag.Message)
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <input type="submit" value="ثبت" class="btn btn-success" />
            </div>
        </div>
    </div>
}

