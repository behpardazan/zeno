@using DataLayer.Base;
@model DataLayer.Entities.Agreement
@{
    ViewBag.Title = "حذف اطلاعات";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<div class="col-sm-12">
    <div class="card-box">
        <a href="@Url.Action("index")" class="icon circle-icon glyphicon glyphicon-arrow-left" data-toggle="tooltip" data-placement="bottom" title="بازگشت"></a>
        <div class="col-sm-12">
            @if (ViewBag.Alert != null)
            {
                <p class="alert alert-danger">@ViewBag.Alert</p>

            }
            <div class="form-horizontal">
                <h3>از حذف این مورد اطمینان دارید؟</h3>
                <dl class="dl-horizontal">
                    <dt>
                        نوع قرارداد
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Code.Name)
                    </dd>
                    <dt>
                        عنوان قرارداد
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt>
                        کارفرما
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Employer)
                    </dd>
                    <dt>
                        تاریخ ثبت
                    </dt>
                    <dd>
                        @Model.CreateDatetime.ToPersianWithTime()
                    </dd>
                    <dt>
                        به روز رسانی
                    </dt>
                    <dd>
                        @Model.UpdateDatetime.ToPersianWithTime()
                    </dd>
                    <dt>
                        مبلغ قرارداد
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.TotalPrice)
                    </dd>
                </dl>
            </div>
            <div class="form-group">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-actions no-color">
                        <input type="submit" value="حذف" class="btn btn-danger" />
                        <span class="btn btn-inverse">@Html.ActionLink("بازگشت", "Index")</span>
                    </div>
                }
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>