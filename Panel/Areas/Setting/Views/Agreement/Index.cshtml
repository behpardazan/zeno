@model IEnumerable<DataLayer.ViewModels.ViewAgreement>
@{
    ViewBag.Title = "لیست قراردادهای ثبت شده نرم افزار";
    Layout = "~/Views/Shared/Layout.cshtml";
}
@section Footer {
    @Html.Action("TableScript", "Layout", new { area = "" })
}
@section Script {
    <script type="text/javascript">
        TableManageButtons.init();
    </script>
}
<div>
    <div class="col-sm-12">
        <div class="card-box table-responsive">
            <a href="@Url.Action("create")" class="icon circle-icon glyphicon glyphicon-plus" data-toggle="tooltip" data-placement="bottom" title="افزودن مورد جدید"></a>
            <table id="datatable-buttons" class="table table-striped table-bordered has-first">
                <thead>
                    <tr>
                        <th class="first">#</th>
                        <th>عنوان</th>
                        <th>کارفرما</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.RowId)</td>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Employer)</td>
                            <td>
                                @Html.ActionLink("ویرایش", "edit", new { id = item.Id }) |
                                @Html.ActionLink("ماژول ها", "module", new { id = item.Id }) |
                                @Html.ActionLink("پلتفرم ها", "platform", new { id = item.Id }) |
                                @Html.ActionLink("جزئیات", "details", new { id = item.Id }) |
                                @Html.ActionLink("پرینت", "print", new { id = item.Id }) |
                                @Html.ActionLink("حذف", "delete", new { id = item.Id })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!-- end col -->
</div>
