@model DataLayer.Entities.Agreement
@{
    ViewBag.Title = "نمایش اطلاعات";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<div class="col-sm-12">
    <div class="card-box">
        <a href="@Url.Action("index")" class="icon circle-icon glyphicon glyphicon-arrow-left" data-toggle="tooltip" data-placement="bottom" title="بازگشت"></a>
        <div class="col-sm-12">
            <div class="form-horizontal">
                <dl class="dl-horizontal">
                    <dt>
                        نوع قرارداد
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Code.Name)
                    </dd>
                    <dt>
                        عنوان قرارداد
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt>
                        کارفرما
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Employer)
                    </dd>
                    <dt>
                        تاریخ ثبت
                    </dt>
                    <dd>
                        @Model.CreateDatetime.ToPersianWithTime()
                    </dd>
                    <dt>
                        به روز رسانی
                    </dt>
                    <dd>
                        @Model.UpdateDatetime.ToPersianWithTime()
                    </dd>
                    <dt>
                        مبلغ قرارداد
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.TotalPrice)
                    </dd>
                </dl>
            </div>
            <div class="form-group">
                <div>
                    <span class="btn btn-primary">@Html.ActionLink("ویرایش", "edit", new { id = Model.ID })</span>
                    <span class="btn btn-inverse">@Html.ActionLink("بازگشت", "Index")</span>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>