@model DataLayer.Entities.WebsiteDomain
@{
    ViewBag.Title = "حذف اطلاعات";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<div class="col-sm-12">
    <div class="card-box">
        <a href="@Url.Action("index", new { @controller="domain", @id=Model.WebsiteId })" class="icon circle-icon glyphicon glyphicon-arrow-left" data-toggle="tooltip" data-placement="bottom" title="بازگشت"></a> 
        <div class="col-sm-12">
            @if (ViewBag.Alert != null)
            {
                <p class="alert alert-danger">@ViewBag.Alert</p>

            }
            <div class="form-horizontal">
                <h3>از حذف این مورد اطمینان دارید؟</h3>
                <dl class="dl-horizontal">
                    <dt>
                        عنوان وبسایت
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Website.Title)
                    </dd>
                    <dt>
                        دامنه
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Domain)
                    </dd>
                    <dt>
                        کد فعال سازی
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.ActivationKey)
                    </dd>
                </dl>
            </div>
            <div class="form-group">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-actions no-color">
                        <input type="submit" value="حذف" class="btn btn-danger" />
                        <span class="btn btn-inverse">@Html.ActionLink("بازگشت", "Index", new { @id = Model.WebsiteId })</span>
                    </div>
                }
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>