@model IEnumerable<DataLayer.ViewModels.ViewEmailHost>
@{
    ViewBag.Title = "لیست دامنه های ایمیل";
    Layout = "~/Views/Shared/Layout.cshtml";
}
@section Footer {
    <!-- Datatables-->
    <script src="/assets/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="/assets/plugins/datatables/dataTables.bootstrap.js"></script>
    <script src="/assets/plugins/datatables/dataTables.buttons.min.js"></script>
    <script src="/assets/plugins/datatables/buttons.bootstrap.min.js"></script>
    <script src="/assets/plugins/datatables/jszip.min.js"></script>
    <script src="/assets/plugins/datatables/pdfmake.min.js"></script>
    <script src="/assets/plugins/datatables/vfs_fonts.js"></script>
    <script src="/assets/plugins/datatables/buttons.html5.min.js"></script>
    <script src="/assets/plugins/datatables/buttons.print.min.js"></script>
    <!-- Datatable init js -->
    <script src="/assets/pages/datatables.init.js"></script>
}
@section Script {
    <script type="text/javascript">
        TableManageButtons.init();
    </script>
}
<div class="row">
    <div class="col-sm-12">
        <div class="card-box table-responsive">
            <div class="dropdown pull-right">
                <a href="#" class="dropdown-toggle card-drop" data-toggle="dropdown" aria-expanded="false">
                    <i class="zmdi zmdi-more-vert"></i>
                </a>
                <ul class="dropdown-menu" role="menu">
                    <li>@Html.ActionLink("افزودن مورد جدید", "create")</li>
                </ul>
            </div>
            <table id="datatable-buttons" class="table table-striped table-bordered has-first">
                <thead>
                    <tr>
                        <th class="first">#</th>
                        <th>عنوان</th>
                        <th>Pop3</th>
                        <th>Smtp</th>
                        <th>فعال/غیرفعال</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.RowId)</td>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Pop3)</td>
                            <td>@Html.DisplayFor(modelItem => item.Smtp)</td>
                            <td>@Html.DisplayFor(modelItem => item.Active)</td>
                            <td>
                                @Html.ActionLink("ویرایش", "edit", new { id = item.Id }) |
                                @Html.ActionLink("جزئیات", "details", new { id = item.Id }) |
                                @Html.ActionLink("حذف", "delete", new { id = item.Id })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!-- end col -->
</div>
