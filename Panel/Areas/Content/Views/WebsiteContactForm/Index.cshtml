@model IEnumerable<DataLayer.ViewModels.ViewWebsiteContactForm>
    @using DataLayer.Base
@{
    ViewBag.Title = @Resource.Lang.ContactUs;
    Layout = "~/Views/Shared/Layout.cshtml";
}
@section Footer {
    @Html.Action("TableScript", "Layout", new { area = "" })
}
@section Script {
    <script type="text/javascript">
        TableManageButtons.init();
    </script>
}
<div>
    <div class="col-sm-12">
        <div class="card-box table-responsive">
           <table id="datatable-buttons" class="table table-striped table-bordered has-first">
                <thead>
                    <tr>
                        <th class="first">#</th>
                        <th>@Resource.Lang.Name</th>
                        <th>@Resource.Lang.DateTime</th>
                        <th>@Resource.Lang.Email</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderByDescending(x => x.Id))
                    {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.RowId)</td>
                        <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Datetime)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>
                            @Html.ActionLink(Resource.Lang.Detail, "Details", new { id = item.Id }) 
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!-- end col -->
</div>
