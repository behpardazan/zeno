@using DataLayer.Base;
@using DataLayer.Entities;
@model IEnumerable<DataLayer.Entities.QuestionPost>
@{
    Post Post = ViewBag.Post;
    ViewBag.Title = Resource.Lang.Question + Post.Name + "'";
    Layout = "~/Views/Shared/Layout.cshtml";
}
@section Footer {
    @Html.Action("TableScript", "Layout", new { area = "" })
}
@section Script {
    @*<script type="text/javascript">
        TableManageButtons.init();
    </script>*@
}
<div>
    <div class="col-sm-12">
        <div class="card-box table-responsive">
            <a href="@Url.Action("index", "Post")" class="icon circle-icon glyphicon glyphicon-arrow-left" data-toggle="tooltip" data-placement="bottom" title=@Resource.Lang.Back></a>
            <a href="@Url.Action("create", new { id = Post.ID })" class="icon circle-icon glyphicon glyphicon-plus" data-toggle="tooltip" data-placement="bottom" title=@Resource.Lang.AddNewCase></a>
            <table id="datatable-buttons" class="table table-striped table-bordered has-first">
                <thead>
                    <tr>
                        <th class="first">#</th>
                        <th>@Resource.Lang.Code</th>
                        <th>@Resource.Lang.Question</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>@item.ID</td>

                            <td>@Html.DisplayFor(modelItem => item.Question)</td>
                            <td>
                                @Html.ActionLink(Resource.Lang.Edit, "edit", new { id = item.ID }) |
                                @Html.ActionLink(Resource.Lang.Delete, "delete", new { id = item.ID })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!-- end col -->
</div>
