@model DataLayer.ViewModels.ViewTag
@using DataLayer.Base

<div>
        <div class="form-group">
            <div class="col-lg-12 font-bold tag-container">
                @foreach (var item in Model.AllTags)
                {
                    bool Checked = false;
                    foreach (var  tag in Model.SourceTags){
                        if (tag.Id == item.Id)
                        {
                            Checked = true;
                        }
                    }
                    <input type="checkbox" checked="@Checked" name="tag" tag-id="@item.Id"/>@item.FaName;
                }

            </div>
        </div>
</div>


