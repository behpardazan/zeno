@using DataLayer.Base;
@model DataLayer.Entities.SurveyQuestion
@{
    ViewBag.Title =Resource.Lang.Question;
    Layout = "~/Views/Shared/Layout.cshtml";
}
<div class="col-sm-12">
    <div class="card-box">
        <a href="@Url.Action("index")" class="icon circle-icon glyphicon glyphicon-arrow-left" data-toggle="tooltip" data-placement="bottom" title=@Resource.Lang.Back></a>
        <div class="col-sm-12">
            <div class="form-horizontal">
                <dl class="dl-horizontal">
                    <dt>
                        @Resource.Lang.Type
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Survey.Name)
                    </dd>
                    <dt>
                        @Resource.Lang.Type @Resource.Lang.Question
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Code.Name)

                    </dd>

                    <dt>
                        @Resource.Lang.Question
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Question)
                    </dd>



                    <dt>
                        وضعیت نمایش
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Active)
                    </dd>
                    <dt>
                        @Resource.Lang.RowNumber
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.ShowNumber)
                    </dd>



                </dl>
            </div>
            <div class="form-group">
                <div>
                    <span class="btn btn-primary">@Html.ActionLink(Resource.Lang.Edit, "edit", new { id = Model.ID })</span>
                    <span class="btn btn-inverse">@Html.ActionLink(Resource.Lang.Back, "Index")</span>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>