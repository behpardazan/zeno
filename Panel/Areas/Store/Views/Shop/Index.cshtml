@model IEnumerable<DataLayer.ViewModels.ViewShop>

@{
    ViewBag.Title = Resource.Lang.RegisteredShopListInSystem;
    Layout = "~/Views/Shared/Layout.cshtml";
}

@section Footer {
    @Html.Action("TableScript", "Layout", new { area = "" })
}

@section Script {
    <script type="text/javascript">
	    TableManageButtons.init();
    </script>
}
<div>
    <div class="col-sm-12">
        <div class="card-box table-responsive">
            <a href="@Url.Action("create")" class="icon circle-icon glyphicon glyphicon-plus" data-toggle="tooltip" data-placement="bottom" title=@Resource.Lang.AddNewShop></a>
            <table id="datatable-buttons" class="table table-striped table-bordered has-first">
                <thead>
                    <tr>
                        <th class="first"></th>
                        <th>@Resource.Lang.WebSiteName</th>
                        <th>@Resource.Lang.ShopName</th>
                        <th>@Resource.Lang.Lable</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.RowId)</td>
                            <td>@Html.DisplayFor(modelItem => item.Website)</td>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Label)</td>
                            <td>
                                @Html.ActionLink(Resource.Lang.Edit, "edit", new { id = item.Id }) |
                                @Html.ActionLink(Resource.Lang.Managers, "shopuser", new { id = item.Id }) |
                                @Html.ActionLink(Resource.Lang.SpeciesProduct, "producttypes", new { id = item.Id }) |
                                @Html.ActionLink(Resource.Lang.Agencies, "index", new { id = item.Id, @controller = "shopreseller" }) |
                                @Html.ActionLink(Resource.Lang.ContactInfo, "index", new { id = item.Id, @controller="shopcontact" }) |
                                @*@Html.ActionLink(Resource.Lang.Pictures, "index", new { id = item.Id, @controller = "shoppicture" }) |
                                @Html.ActionLink(Resource.Lang.Files_Degrees, "index", new { id = item.Id, @controller = "shopdocument" }) |*@
                                @Html.ActionLink(Resource.Lang.Detail, "details", new { id = item.Id }) |
                                @Html.ActionLink(Resource.Lang.Delete, "delete", new { id = item.Id })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!-- end col -->
</div>
