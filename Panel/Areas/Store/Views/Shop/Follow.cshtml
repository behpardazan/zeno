@using DataLayer.Base;
@model IEnumerable<DataLayer.ViewModels.ViewShopFollow>
@{
    ViewBag.Title = Resource.Lang.StoreFollowersList;
    Layout = "~/Views/Shared/Layout.cshtml";
}
@section Footer {
    @Html.Action("TableScript", "Layout", new { area = "" })
}
@section Script {
    <script type="text/javascript">
        TableManageButtons.init();
    </script>
}
<div>
    <div class="col-sm-12">
        <div class="card-box table-responsive">
            <table id="datatable-buttons" class="table table-striped table-bordered has-first">
                <thead>
                    <tr>
                        <th class="first">#</th>
                        <th>@Resource.Lang.Name_Family</th>
                        <th>@Resource.Lang.Mobile</th>
                        <th>@Resource.Lang.Email</th>
                        <th>@Resource.Lang.CompanyName</th>
                        <th>@Resource.Lang.Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.RowId)</td>
                            <td>@Html.DisplayFor(modelItem => item.Account.FullName)</td>
                            <td>@Html.DisplayFor(modelItem => item.Account.Mobile)</td>
                            <td>@Html.DisplayFor(modelItem => item.Account.Email)</td>
                            <td>@Html.DisplayFor(modelItem => item.Account.Company)</td>
                            <td>@item.Datetime.ToPersianWithTime()</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!-- end col -->
</div>
