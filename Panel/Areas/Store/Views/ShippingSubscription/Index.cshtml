@using DataLayer.Base;
@using DataLayer.Entities;
@model IEnumerable<DataLayer.ViewModels.ViewShippingSubscription>
@{
   
    ViewBag.Title =  "لیست اشتراک ها";
    Layout = "~/Views/Shared/Layout.cshtml";
}
@section Footer {
    @Html.Action("TableScript", "Layout", new { area = "" })
}
@section Script {
    <script type="text/javascript">
TableManageButtons.init();
    </script>
}
<div>
    <div class="col-sm-12">
        <div class="card-box table-responsive">
            <a href="@Url.Action("create")" class="icon circle-icon glyphicon glyphicon-plus" data-toggle="tooltip" data-placement="bottom" title=@Resource.Lang.AddNewCase></a>
            <table id="datatable-buttons" class="table table-striped table-bordered has-first">
                <thead>
                    <tr>
                        <th class="first">#</th>
                        
                        <th>@Resource.Lang.StateName</th>
                        <th>@Resource.Lang.Price</th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>

                        <td>@Html.DisplayFor(modelItem => item.State.Name)</td>
                        <td>@item.Price.GetCurrencyFormat()</td>

                        <td>
                            @Html.ActionLink(Resource.Lang.Edit, "edit", new { id = item.Id }) 
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!-- end col -->
</div>
