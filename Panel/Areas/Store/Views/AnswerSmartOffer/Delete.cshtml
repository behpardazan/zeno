@model DataLayer.Entities.AnswerSmartOffer
@{
    ViewBag.Title = @Resource.Lang.RemoveInfo;
    Layout = "~/Views/Shared/Layout.cshtml";
}
<div class="col-sm-12">
    <div class="card-box">
        <a href="@Url.Action("index", new {
                    questionId = Model.QuestionId
                   
                })" class="icon circle-icon glyphicon glyphicon-arrow-left" data-toggle="tooltip" data-placement="bottom" title=   @Resource.Lang.Back></a>
        <div class="col-sm-12">
            @if (ViewBag.Alert != null)
            {
                <p class="alert alert-danger">@ViewBag.Alert</p>

            }
            <div class="form-horizontal">
                <h3>@Resource.Lang.SureDelete</h3>
                <dl class="dl-horizontal">
                    <dt>
                        @Resource.Lang.Question
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.QuestionSmartOffer.Text)
                    </dd>
                    <dt>
                        @Resource.Lang.Text
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Text)
                    </dd>
                    <dt>
                        @Resource.Lang.TypeField
                    </dt>
                  
                </dl>
            </div>
            <div class="form-group">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <input type="hidden" value="@Model.ID" id="ID" name="ID" />

                    <div class="form-actions no-color">
                        <input type="submit" value=@Resource.Lang.Delete class="btn btn-danger" />
                        <span class="btn btn-inverse">
                            @Html.ActionLink(Resource.Lang.Back, "index", new
                       {
                           questionId = Model.QuestionId
                         
                       })
                        </span>

                    </div>
                }
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>