@using DataLayer.Base;
@model DataLayer.Entities.Rebate
@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/PrintLayout.cshtml";
}
@if (Model.Active)
{
    <div class="col-sm-12">
        <div class="form-horizontal line-height-invoice">
            <div style="max-width:700px; margin: 0 auto; text-align: center;">
                <h4>
                    @Model.Name <br />
                   @Resource.Lang.ThisDiscountAmountIsActiveFor @Model.PriceValue.GetCurrencyFormat() @Resource.Lang.ISActive <br />
                    <span class="english-only">@Model.CodeValue</span>
                </h4>
            </div>
        </div>
    </div>
}






