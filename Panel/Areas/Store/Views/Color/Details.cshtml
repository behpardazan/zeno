@model DataLayer.Entities.Color
@{
    ViewBag.Title = Resource.Lang.ShowInfo;
    Layout = "~/Views/Shared/Layout.cshtml";
}
<div class="col-sm-12">
    <div class="card-box">
        <a href="@Url.Action("index", new { id = Model.ProductTypeId })" class="icon circle-icon glyphicon glyphicon-arrow-left" data-toggle="tooltip" data-placement="bottom" title="بازگشت"></a>
        <div class="col-sm-12">
            <div class="form-horizontal">
                <dl class="dl-horizontal">
                    <dt>
                        @Resource.Lang.TypeProduct
                    </dt>
                    <dd>
                        @Model.ProductType.Name
                    </dd>
                    <dt>
                       @Resource.Lang.ColorName
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt>
                      @Resource.Lang.ColorCode
                    </dt>
                    <dd>
                        <span class="color-item" style="background-color:#@Model.HexValue">@Model.HexValue</span>
                        @Html.DisplayFor(model => model.HexValue)
                    </dd>
                </dl>
            </div>
            <div class="form-group">
                <div>
                    <span class="btn btn-primary">@Html.ActionLink(Resource.Lang.Edit, "edit", new { id = Model.ID })</span>
                    <span class="btn btn-inverse">@Html.ActionLink(@Resource.Lang.Back, "Index", new { id = Model.ProductTypeId })</span>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>