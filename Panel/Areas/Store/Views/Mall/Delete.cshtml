@model DataLayer.Entities.Mall
@{
    ViewBag.Title = Resource.Lang.DeletePassage  + Model.Name;
    Layout = "~/Views/Shared/Layout.cshtml";
}
<div class="col-sm-12">
    <div class="card-box">
        <a href="@Url.Action("index")" class="icon circle-icon glyphicon glyphicon-arrow-left" data-toggle="tooltip" data-placement="bottom" title=@Resource.Lang.Back></a>
        <div class="col-sm-12">
            <div class="form-horizontal">
                <h3>@Resource.Lang.SureDelete</h3>
                <dl class="dl-horizontal">
                    <dt>
                @Resource.Lang.PassagesName       
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt>
                        @Resource.Lang.City
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.City.Name)
                    </dd>
                    <dt>
                        @Resource.Lang.StartBuilding
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.StartBuildingDate)
                    </dd>
                    <dt>
                        @Resource.Lang.EndBuilding
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.EndBuildingDate)
                    </dd>
                    <dt>
                       @Resource.Lang.OpeningDate
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.OpeningDate)
                    </dd>
                    <dt>
                        @Resource.Lang.Owner
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Owner)
                    </dd>
                    <dt>
                        @Resource.Lang.Area
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Area)
                    </dd>
                    <dt>
                        @Resource.Lang.ArchitecturalCompany
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.ArchitecturalCompany)
                    </dd>
                    <dt>
                        @Resource.Lang.Address
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Address)
                    </dd>
                    <dt>
                        @Resource.Lang.Description
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Description)
                    </dd>
                </dl>
            </div>
            <div class="form-group">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-actions no-color">
                        <input type="submit" value= @Resource.Lang.Delete  class="btn btn-danger" />
                        <span class="btn btn-inverse">@Html.ActionLink(Resource.Lang.Back, "Index")</span>
                    </div>
                }
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>