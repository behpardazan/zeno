@model DataLayer.Entities.Package
@{
    ViewBag.Title = "حذف اطلاعات";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<div class="col-sm-12">
    <div class="card-box">
        <a href="@Url.Action("index")" class="icon circle-icon glyphicon glyphicon-arrow-left" data-toggle="tooltip" data-placement="bottom" title="بازگشت"></a>
        <div class="col-sm-12">
            @if (ViewBag.Alert != null)
            {
                <p class="alert alert-danger">@ViewBag.Alert</p>

            }
            <div class="form-horizontal">
                <h3>از حذف این مورد اطمینان دارید؟</h3>
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Label)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Label)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Price)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Price)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.DayCount)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.DayCount)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.ProductCount)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.ProductCount)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.ProductTypeCount)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.ProductTypeCount)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.DiskSpace)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.DiskSpace)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.HasTemplate)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.HasTemplate)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.HasDomain)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.HasDomain)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Active)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Active)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Picture.Url)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Picture.Url)
                    </dd>
                </dl>
            </div>
            <div class="form-group">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-actions no-color">
                        <input type="submit" value="حذف" class="btn btn-danger" />
                        <span class="btn btn-inverse">@Html.ActionLink("بازگشت", "Index")</span>
                    </div>
                }
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>