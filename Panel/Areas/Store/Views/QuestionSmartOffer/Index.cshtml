@using DataLayer.Base;
@model IEnumerable<DataLayer.Entities.QuestionSmartOffer>
@{
    ViewBag.Title = "سوالات پیشنهاد محصول";
    Layout = "~/Views/Shared/Layout.cshtml";
}
@section Footer {
    @Html.Action("TableScript", "Layout", new { area = "" })
}
@section Script {
    <script type="text/javascript">
        //TableManageButtons.init();
    </script>
}
<div>
    <div class="col-sm-12">
        <div class="card-box table-responsive">
            <a href="@Url.Action("create")" class="icon circle-icon glyphicon glyphicon-plus" data-toggle="tooltip" data-placement="bottom" title=@Resource.Lang.AddNewCase></a>
            <span>تعداد افرادی که فرم مشاوره را تکمیل کرده اند: </span><strong>@ViewBag.VisitCount</strong>
            <table id="datatable-buttons" class="table table-striped table-bordered has-first">
                <thead>
                    <tr>
                        <th class="first">#</th>
                        <th>@Resource.Lang.ID</th>
                        <th>@Resource.Lang.Text</th>
                        <th>@Resource.Lang.Active</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.ID)</td>
                           
                            <td>@Html.DisplayFor(modelItem => item.Text)</td>
                            <td>@Html.DisplayFor(modelItem => item.Active)</td>
                            <td>
                                @Html.ActionLink(Resource.Lang.Edit, "edit", new { id = item.ID }) |
                                @Html.ActionLink(Resource.Lang.Delete, "delete", new { id = item.ID })|
                                @Html.ActionLink("پاسخ", "index", new { @controller = "answersmartoffer", @questionId = item.ID }) 

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!-- end col -->
</div>
