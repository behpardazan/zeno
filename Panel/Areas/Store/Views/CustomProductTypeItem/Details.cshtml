@using DataLayer.Base;
@model DataLayer.Entities.ProductCustomItem
@{
    ViewBag.Title = Resource.Lang.ShowInfo;
    Layout = "~/Views/Shared/Layout.cshtml";
}
<div class="col-sm-12">
    <div class="card-box">
        <a href="@Url.Action("index")" class="icon circle-icon glyphicon glyphicon-arrow-left" data-toggle="tooltip" data-placement="bottom" title=@Resource.Lang.Back></a>
        <div class="col-sm-12">
            <div class="form-horizontal">
                <dl class="dl-horizontal">
                    <dt>
                        @Resource.Lang.ItemCode
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.SyncId)
                    </dd>
                    <dt>
                        @Resource.Lang.Title
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Value)
                    </dd>
                    <dt>
                      @Resource.Lang.FieldName
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.ProductCustomField.Name)
                    </dd>
                    <dt>
                        @Resource.Lang.Matching
                    </dt>
                    <dd>
                        @Model.SyncDatetime.ToPersian().ToPersian()
                    </dd>
                </dl>
            </div>
            <div class="form-group">
                <div>
                    <span class="btn btn-primary">@Html.ActionLink(Resource.Lang.Edit, "edit", new { id = Model.ID })</span>
                    <span class="btn btn-inverse">@Html.ActionLink(Resource.Lang.Back, "Index")</span>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>