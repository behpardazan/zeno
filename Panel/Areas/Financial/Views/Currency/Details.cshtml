
@model DataLayer.Entities.Currency
@{
    ViewBag.Title = "نمایش اطلاعات";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<div class="col-sm-12">
    <div class="card-box">
        <a href="@Url.Action("index")" class="icon circle-icon glyphicon glyphicon-arrow-left" data-toggle="tooltip" data-placement="bottom" title="بازگشت"></a>
        <div class="col-sm-12">
            <div class="form-horizontal">
                <dl class="dl-horizontal">
                    <dt>
                      نام واحد پول
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.CurrencyName)
                    </dd>
                    <dt>
                      علامت واحد پول
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.CurrencySign)
                    </dd>
                    <dt>
                   معادل ریال
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.UnitPrice)
                    </dd>
                     
                </dl>
            </div>
            <div class="form-group">
                <div>
                    <span class="btn btn-primary">@Html.ActionLink("ویرایش", "edit", new { id = Model.CurrencyId })</span>
                    <span class="btn btn-inverse">@Html.ActionLink("بازگشت", "Index")</span>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>