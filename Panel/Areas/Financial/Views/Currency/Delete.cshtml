@model DataLayer.Entities.Currency
@{
    ViewBag.Title = "حذف اطلاعات";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<div class="col-sm-12">
    <div class="card-box">
        <a href="@Url.Action("index")" class="icon circle-icon glyphicon glyphicon-arrow-left" data-toggle="tooltip" data-placement="bottom" title="بازگشت"></a>
        <div class="col-sm-12">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(x=>x.CurrencyId)
                <div class="form-horizontal">
                    <h3>از حذف این مورد اطمینان دارید؟</h3>
                    <dl class="dl-horizontal">
                        <dt>
                            نام واحد پولی
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.CurrencyName)
                        </dd>
                        <dt>
                            علامت واحد پول
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.CurrencySign)
                        </dd>
                        <dt>
                            معادل رریال
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.UnitPrice)
                        </dd>

                    </dl>
                </div>
                <div class="form-group">


                    <div class="form-actions no-color">
                        <input type="submit" value="حذف" class="btn btn-danger" />
                        <span class="btn btn-inverse">@Html.ActionLink("بازگشت", "Index")</span>
                    </div>

                </div>

            }
        </div>
        <div class="clearfix"></div>
    </div>
</div>
