@using DataLayer.ViewModels;
@{
    ViewBag.Title = Resource.Lang.EnteringSystem;
    Layout = "~/Areas/Profile/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm())
{
<div class="m-t-40 card-box">
    <div class="text-center">
        <h4 class="text-uppercase font-bold m-b-0">@Resource.Lang.EnteringSystem</h4>
    </div>
    <div class="panel-body">
        <div class="form-horizontal m-t-20">
            <div class="form-group ">
                <div class="col-xs-12">
                    @if (ViewBag.Username == null)
                    {
                        <input name="username" class="form-control" type="text" autocomplete="off" placeholder=@Resource.Lang.UserName>
                    }
                    else
                    {
                        <input name="username" class="form-control" type="text" autocomplete="off" value="@ViewBag.Username" placeholder=@Resource.Lang.UserName>
                    }
                </div>
            </div>

            <div class="form-group">
                <div class="col-xs-12">
                    <input name="password" class="form-control" type="password" autocomplete="off" placeholder=@Resource.Lang.Password>
                </div>
            </div>

            <div class="form-group ">
                <div class="col-xs-12">
                    <div>
                        <input id="checkboxsignup" name="remember" value="true" checked="checked" type="checkbox" />
                        <label for="checkboxsignup">
                    @Resource.Lang.RememberMe
                        </label>
                    </div>

                </div>
            </div>

            @Html.Partial("~/Views/Public/Message.cshtml", (ViewMessage)ViewBag.Message)

            <div class="form-group text-center m-t-30">
                <div class="col-xs-12">
                    <button class="btn btn-custom btn-bordred btn-block waves-effect waves-light" type="submit">@Resource.Lang.Entry</button>
                </div>
            </div>

            <div class="form-group m-t-30 m-b-0">
                <div class="col-sm-12">
                    <a href="/profile/recover" class="text-muted"><i class="fa fa-lock m-r-5"></i>@Resource.Lang.IForgotMyPassword</a>
                </div>
            </div>
        </div>

    </div>
</div>
}
<!-- end card-box-->


