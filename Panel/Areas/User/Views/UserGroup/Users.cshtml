@model IEnumerable<DataLayer.ViewModels.ViewSiteUserUserGroup>
@{
    ViewBag.Title =Resource.Lang.UserGroupList ;
    Layout = "~/Views/Shared/Layout.cshtml";
}

@section Footer {
    @Html.Action("TableScript", "Layout", new { area = "" })
}

@section Script {
    <script type="text/javascript">
        TableManageButtons.init();
    </script>
}

<div class="row">
    <div class="col-sm-12">
        <div class="card-box table-responsive">
            <a href="@Url.Action("index")" class="icon circle-icon glyphicon glyphicon-arrow-left" data-toggle="tooltip" data-placement="bottom" title=@Resource.Lang.Back></a>
            <table id="datatable-buttons" class="table table-striped table-bordered has-first">
                <thead>
                    <tr>
                        <th class="first"></th>
                        <th>@Resource.Lang.UserGroup</th>
                        <th>@Resource.Lang.User</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.RowId)</td>
                            <td>@Html.DisplayFor(modelItem => item.UserGroupName)</td>
                            <td>@Html.DisplayFor(modelItem => item.SiteUserName)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!-- end col -->
</div>


