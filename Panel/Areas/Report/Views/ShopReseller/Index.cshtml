@using DataLayer.Base;
@using DataLayer.ViewModels;

@{
    ViewBag.Title = Resource.Lang.SalesReportsBasedOnResellers;
    Layout = "~/Views/Shared/Layout.cshtml";

    List<ViewReportReseller> list = ViewBag.ReportResult;
}

<div>
    <div class="col-sm-12">
        <div class="card-box table-responsive">
            <table id="datatable-buttons" class="table table-striped table-bordered has-first">
                <thead>
                    <tr>
                        <th class="first">#</th>
                        <th>@Resource.Lang.ResellerName</th>
                        <th>@Resource.Lang.NumberOfProductsSold </th>
                        <th>@Resource.Lang.TotalAmountSold</th>
                        <th>@Resource.Lang.RepresentativeCommission</th>
                        <th>@Resource.Lang.LoanRate  </th>
                        <th>@Resource.Lang.AmountCleared</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < list.Count; i++)
                    {
                        ViewReportReseller item = list[i];
                        <tr>
                            <td>@((i + 1).ToPersian())</td>
                            <td>@(item.Name)</td>
                            <td>@(item.ProductCount)</td>
                            <td>@(item.SumPrice.GetCurrencyFormat()) @Resource.Lang.Toman</td>
                            <td>@(item.BenefitPercent) @Resource.Lang.Percent</td>
                            <td>@(item.AmountOfDept.GetCurrencyFormat())</td>
                            <td>@(item.SumCheckOut.GetCurrencyFormat())</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!-- end col -->
</div>

