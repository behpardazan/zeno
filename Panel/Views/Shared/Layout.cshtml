<!DOCTYPE html>
<html lang="en" dir="rtl">
    <head>
        <!-- App title -->
        @if (ViewBag.Title == null)
        {
            <title>@Resource.Lang.BehpardazanContentManagementPanel</title>
        }
        else
        {
            <title>@ViewBag.Title</title>
        }
        @Html.Action("PublicHeader", "Layout", new { Area = "" })
        @RenderSection("Header", false)
        <script src="~/Assets/js/modernizr.min.js"></script>
    </head>
    <body class="fixed-left">
        <!-- Begin page -->
        <div id="wrapper">
            <!-- Top Bar Start -->
            <div class="topbar">

                <!-- LOGO -->
                <div class="topbar-left">
                    <a href="/" class="logo">@Resource.Lang.ControlPanel</a>
                </div>

                <!-- Button mobile view to collapse sidebar menu -->
                <div class="navbar navbar-default" role="navigation">
                    <div class="container">

                        <!-- Page title -->
                        <ul class="nav navbar-nav navbar-left">
                            <li>
                                <button class="button-menu-mobile open-left">
                                    <i class="zmdi zmdi-menu"></i>
                                </button>
                            </li>
                            <li>
                                <h4 class="page-title">@ViewBag.Title</h4>
                            </li>
                        </ul>                        
                        @Html.Action("TopBar", "Layout", new { Area = "" })
                        <!-- Right(Notification and Searchbox -->
                    </div><!-- end container -->
                </div><!-- end navbar -->
            </div>

            <!-- Top Bar End -->
            <!-- ========== Left Sidebar Start ========== -->
            <div class="left side-menu">
                <div class="sidebar-inner slimscrollleft">
                    <!-- User -->
                        @Html.Action("UserBox", "Layout", new { Area = "" })
                    <!-- End User -->
                    <!--- Sidemenu -->
                    @Html.Action("Navigation", "Layout", new { Area = "" })
                    <!-- Sidebar -->
                    <div class="clearfix"></div>
                </div>
            </div>
            <!-- Left Sidebar End -->
            <!-- ============================================================== -->
            <!-- Start right Content here -->
            <!-- ============================================================== -->
            <div class="content-page">
                <!-- Start content -->
                <div class="content">
                    <div class="container">
                        <div class="row">
                            @RenderBody()
                        </div>
                        <!-- End row -->
                    </div> <!-- container -->
                </div> <!-- content -->
                @Html.Action("Footer", "Layout", new { Area = "" })    
            </div>
            <!-- End content-page -->
            <!-- ============================================================== -->
            <!-- End Right content here -->
            <!-- ============================================================== -->
            <!-- Right Sidebar -->
            @Html.Action("Notification", "Layout", new { Area = "" })
            <!-- /Right-bar -->
        </div>

        <div id="modalLoading" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true" style="display: none;">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                        <h4 class="modal-title" id="modalTitle">@Resource.Lang.Doing</h4>
                    </div>
                    <div class="modal-body">

                        <div class="spinner">
                            <div class="rect1"></div>
                            <div class="rect2"></div>
                            <div class="rect3"></div>
                            <div class="rect4"></div>
                            <div class="rect5"></div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <!-- END wrapper -->
        <script>
            var resizefunc = [];
        </script>
        <!-- jQuery  -->
        <script>
            var base_admin_url = "/panel";
        </script>
        @Html.Action("PublicFooter", "Layout", new { Area = "" })
        @RenderSection("Footer", false)
        <!-- App js -->
        <script src="~/Assets/js/jquery.core.js"></script>
        <script src="~/Assets/js/jquery.app.js"></script>
        @RenderSection("Script", false)
    </body>
</html>