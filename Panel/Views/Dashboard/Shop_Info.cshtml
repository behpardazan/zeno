@using DataLayer.Base;
@model DataLayer.ViewModels.ViewShop

<div class="col-lg-4 col-md-6">
    <div class="card-box">
        <h4 class="header-title m-t-0 m-b-30">@Resource.Lang.Shop + @Model.Name</h4>
        <div class="widget-chart-1">
            <div class="widget-chart-box-1">
                <a href="@Url.Action("profile", new { @controller="shop", @area="store" })">
                    @if (String.IsNullOrEmpty(Model.Picture.Url) == false)
                    {
                        <img class="home-shop-image" src="@Model.Picture.GetUrl()" />
                    }
                    else
                    {
                        <img class="home-shop-image" src="~/Assets/images/no-image.png" />
                    }
                </a>
            </div>
            <div class="widget-detail-1">
                <h2 class="p-t-10 m-b-0"> @Model.Products.Count </h2>
                <p class="text-muted">  @Resource.Lang.ProductUntill</p>
            </div>
        </div>
    </div>
</div>

