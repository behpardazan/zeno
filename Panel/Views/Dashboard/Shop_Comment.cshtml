        <h4 class="header-title m-t-0 m-b-30">@Resource.Lang.NotCheckedComments </h4>
        <div class="widget-chart-1">
            <div class="widget-chart-box-1">
                <a href="@Url.Action("index", new { @controller="productcomment", @area="crm" })">
                    <i class="fa fa-comments home-shop-icon" aria-hidden="true"></i>
                </a>
            </div>
            <div class="widget-detail-1">
                <h2 class="p-t-10 m-b-0"> @Model.ToPersian()</h2>
