
@{
    ViewBag.Title = Resource.Lang.RecoveryPassword;
    Layout =Resources.Lajevard.WEBSITE_LAYOUT;
}

@model DataLayer.Entities.AccountPasswordForget


<section class="login mt-5 p-4">
    <div class="container p-0">
        <div>
            @if (ViewBag.Message != null)
            {
                <label style="color:red;">@ViewBag.Message.Body </label>
            }

        </div>
        <div class="row">
            <div class="col-md-4">
                <form action="~/Account/Recover" method="post">
                    @Html.HiddenFor(x => x.ID)
                    <div class="form-group text-right">
                        <label for="password">@Resource.Lang.NewPassword</label>
                        <input type="password" id="password" name="password" class="form-control w-100" />
                    </div>
                    <div class="form-group text-right">
                        <label for="password">@Resource.Lang.RePassword</label>
                        <input type="password" id="confirm" name="confirm" class="form-control w-100" />
                    </div>
                    <input type="submit" value="@Resource.Lang.ChangePassword" class="btn btnDark" />

                </form>
            </div>
        </div>
    </div>
</section>



