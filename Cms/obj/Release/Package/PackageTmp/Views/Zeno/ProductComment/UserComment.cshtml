@model IEnumerable<DataLayer.Entities.ProductComment>
@using DataLayer.Base
@if (Model.Count() > 0)
{
    <div class="row col-lg-12">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-lg-4">
                    @Resource.Lang.ProductName
                </div>
                <div class="col-lg-4">
                    @Resource.Lang.Description
                </div>
                <div class="col-lg-4">
                    -
                </div>
            </div>
        </div>
        <div class="col-lg-12">

            @foreach (var item in Model)
            {
                <div class="row">
                    <div class="col-lg-4">

                        <a href="@item.Product.GetLinkWithUrl()">  @item.Product.GetName()</a>
                    </div>
                    <div class="col-lg-4">
                        @if (item.Body.Length > 30)
                        {
                            @Html.Raw(@item.Body.Substring(0, 30)) <span>...</span>
                        }
                        else
                        {
                            @Html.Raw(@item.Body)
                        }
                    </div>
                    <div class="col-lg-4">
                        <input type="button" onclick="ShowAnswerComment(@item.ID)" class="btn btn-danger" value="@Resource.Lang.Details" />
                    </div>
                </div>
                @*<a onclick="@Html.Action("Search", "ProductComment", new { pcoaccountId = item.AccountId, pcoviewname = "UserAnswer", pccommentid = item.ID })"></a>*@

                @*@Html.Action("Search", "ProductComment", new { pcoaccountId = item.AccountId, pcoviewname = "UserAnswer", pccommentid = item.ID })*@
            }
        </div>
    </div>



}






