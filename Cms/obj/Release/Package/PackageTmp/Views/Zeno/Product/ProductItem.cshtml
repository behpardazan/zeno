            {
                <div class="pro-code d-flex">
                    <strong>کد محصول : @Model.CodeValue</strong>
                </div>
            }
            @if (DiscountPercent != 0)
            {
                <div class="ProductSalePersent">
                    <span>@DiscountPercent%</span>
                </div>
            }

