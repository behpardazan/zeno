@using DataLayer.Base;
@{
    ViewBag.Title = Resource.Lang.ContactUs;
    Layout = Resources.Zeno.WEBSITE_LAYOUTIndex;
    string url = HttpContext.Current.Request.Url.AbsoluteUri;
    ViewBag.url = url;
    ViewBag.Follow = "index, follow";
}
<section class="ContactUs">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="ContactUsText">
                    <div class="ContactUsAddressBox mb-5 mb-lg-0">
                        <div class="AddressItem First">
                            @Html.Raw(BaseContent.WebsiteDetail.ContactUs)
                        </div>

                    </div>
                    <div>
                        <div class="ContactForm">
                            <div action="">
                                <div class="form-group">
                                    <input type="text" name="contactName" class="form-control" data-bind="value:viewModel.ContactForm.FullName" placeholder="@Resource.Lang.EnterFullName">

                                </div>
                                <div class="form-group">
                                    <input type="text" name="contactEmail" class="form-control" data-bind="value:viewModel.ContactForm.Email" placeholder="@Resource.Lang.EnterEmail">

                                </div>
                                <div class="form-group">
                                    <input type="text" name="contactSub" class="form-control" data-bind="value:viewModel.ContactForm.Subject" placeholder="@Resource.Lang.Subject">

                                </div>
                                <div class="form-group">
                                    <textarea name="contactTxt" id="contactTxt" cols="30" rows="5" data-bind="value:viewModel.ContactForm.Body" class="form-control" placeholder="@Resource.Lang.EnterText"></textarea>

                                </div>
                                @*</form>*@
                                <div class="ContactFormBtnBox">
                                    <button class="btn primary_btn me-auto float-left mb-3" codeprocess-action="contactform">
                                        <span>@Resource.Lang.Send</span>
                                        <i class="bi bi-chevron-left"></i>
                                    </button>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                    <div class="ContactUsPhones">
                        <a href="tel:@Html.Raw(BaseContent.WebsiteDetail.Phone)">@Html.Raw(BaseContent.WebsiteDetail.Phone)</a>
