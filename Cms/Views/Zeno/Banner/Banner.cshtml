@model IEnumerable<DataLayer.Entities.Banner>
@using DataLayer.Base
@{
    List<DataLayer.Entities.Banner> list = Model.OrderBy(s => s.ShowNumber).ToList();

}



@if (list.Count() > 0)
{
    var banner = list.FirstOrDefault();
    if (banner.Picture != null)
    {
        <a href="@banner.Url">
            <img src="@banner.Picture.GetUrl()" alt="@banner.GetName()">

        </a>

    }

}
