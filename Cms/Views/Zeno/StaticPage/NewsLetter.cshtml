
<section class="newsletter">
    <div class="container">
        <div class="newsletter_box border-0">
            <div class="row">
                <div class="col-md-7 ">
                    <div action="" class="newsletterForm">
                        <div class="form-group news_letter">
                            <input type="text" class="form-control" data-bind="value:viewModel.NewsLetter.Email" name="newsletterEmail" placeholder="@Resource.Lang.EnterEmail">
                            <button codeprocess-action="newsletter-add" class="btn  green_btn rounded-0 newsletterBtn">@Resource.Lang.Join</button>
                        </div>
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="newsletter_info">
                        <div class="newsletter_title">
                            <strong>@Resource.Lang.BecomeMemberNewsletter</strong>
                            <span>@Resource.Lang.GoodNewsWay...</span>
                        </div>
                        <div class="newsletter_icon"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>