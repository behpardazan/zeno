
@model Tuple<string,string,int,int>

@{ 
    var percent = Math.Round(((double)(Model.Item3 * 100)) / (double)Model.Item4);

}
<div class="card widget_2 big_icon cart">
    <div class="body">
        <h6>@Model.Item1</h6>
        <h2>@Model.Item3 <small class="info">@Resource.Lang.For @Model.Item4 @Resource.Lang.Order</small></h2>
        <small>@percent% @Resource.Lang.ForAllOrders</small>
        <div class="progress">
            <div class="progress-bar l-@Model.Item2" role="progressbar" aria-valuenow="@Model.Item3" aria-valuemin="0" aria-valuemax="@Model.Item4" style="width: @percent%;"></div>
        </div>
    </div>
</div>
