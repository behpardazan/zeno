@using DataLayer.Base;
@model DataLayer.Entities.Gallery
@{
    ViewBag.Title = Model.Name;
    Layout = Resources.Lajevard.WEBSITE_LAYOUT;
}
<section class="GalleryBanner">
    <h3>@Model.Name</h3>
</section>
<div id="myModal" class="modal mediaModal">

    <!-- The Close Button -->
    <span class="close closeModal">&times;</span>

    <!-- Modal Content (The Image) -->
    <img class="modal-content" id="img01">

</div>
<section class="Pictures gallery_box">
    <div class="container">
        <div class="row">
            @foreach (var item in Model.GalleryPictures)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <a href="#">
                        <div class="PictureGalleryItem">
                            <img src="@item.Picture.GetUrl()" alt="">
                            
                        </div>
                    </a>
                </div>
            }

        </div>
    </div>
</section>






