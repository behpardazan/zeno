@using DataLayer.Base
    <style>
        .proBox {
            min-height: 400px;
            max-width: 400px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: space-between;
            padding: 10px;
            border: 1px solid #3333;
            border-radius: 20px;
            position: relative
        }

        .removeItem {
            position: absolute;
            top: 10px;
            right: 10px;
            z-index: 10;
        }

        .proImg {
            height: 200px;
            width: 100%;
        }

            .proImg img {
                width: 100%;
                height: 100%;
            }

        .proInfo {
            display: flex;
            flex-direction: column;
            align-items: center
        }
    </style>


<div class="col-md-4 col-6 p-1">
    <div class="proBox">
        <div class="removeItem">
            <a class="close" href="javascript://" codeprocess-action="productlike-remove" data-bind=" attr: { 'product-id': Product.Id }">&times;</a>
        </div>
        <div class="proImg">
            <a data-bind="attr: { href: '/pr/' + Product.Id + '/' + Product.Name }">
                <img data-bind="attr: { src: Product.Picture.Url }" src="Favorit" alt="Favorit">

            </a>
        </div>
        <div class="proInfo">
            <a data-bind="attr: { href: '/pr/' + Product.Id + '/' + Product.Name }">
                <span data-bind="text:Product.Name"> </span>
            </a>

        </div>
        @*<div class="proFooter">
            <a data-bind="attr: { href: '/pr/' + Product.Id + '/' + Product.Name }" class="product_btn seemore">مشاهده و خرید</a>

        </div>*@

    </div>
</div>

