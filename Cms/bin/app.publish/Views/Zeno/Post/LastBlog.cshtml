@using DataLayer.Base;
@model IEnumerable<DataLayer.Entities.Post>

    <div class="NewestNews">
        <div class="NewestNewsTitle">
            <div class="NewestNewsTitleContent">
                <h4> @Resource.Lang.LastArticle</h4>
            </div>
        </div>
        @if (Model.Count() > 0)
        {
            foreach (var item in Model)
            {
                <div class="NewestNewsItem">

                    <a href="@item.GetLinkWithUrl()">
                        <div class="NewestNewsItemContent">
                            <p>@item.GetName()</p>
                        </div>
                    </a>
                </div>
            }
        }
    </div>
