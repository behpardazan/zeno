@using DataLayer.Entities
@model List<DataLayer.Entities.Merchant>

<div class="merchant-container">
    @for (int i = 0; i < Model.Count; i++)
    {
        <label class="merchant-item" for="merchant-item-@Model[i].ID">
            <img src="@Model[i].Bank.PictureUrl" class="merchant-img" />
            @if (i == 0)
            {
            <input id="merchant-item-@Model[i].ID" name="merchantId" type="radio" value="@Model[i].ID" checked="checked" />
            }
            else
            {
            <input id="merchant-item-@Model[i].ID" name="merchantId" type="radio" value="@Model[i].ID" />
            }
        </label>
    }
</div>



